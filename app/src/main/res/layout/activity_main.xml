<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tv_use_default_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_use_default_multiMode_activity"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="使用默认的Activity启动选择器" />

    <Button
        android:id="@+id/tv_use_default_multiMode_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_use_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="使用默认的Activity启动选择器(多选模式)" />

    <Button
        android:id="@+id/tv_use_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="直接使用插件的View启动选择器" />

</RelativeLayout>